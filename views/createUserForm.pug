include labelInputPair.pug

- var titleText = "User Manager"

doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title= titleText
    body
        div
            h3= "Create Account"
            +homeButton()
        form(action="/createUser", method="POST")
            +labelInputPair("First name", "text", "firstname", "John")
            +labelInputPair("Last Name", "text", "lastname", "Smith")
            +labelInputPair("Email", "text", "email", "johnsmith@hotmail.com")
            +labelInputPair("Age", "text", "age", "27")
            button(type="submit") Create Account