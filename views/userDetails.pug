include labelInputPair.pug

var titleText = "#{user.name}"

doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title= titleText
    body 
        div
            h3= titleText
            button(type="button" value="Delete")
        p= "Id: " + user.id
         +labelInputPair("Email", "text", "email", "#{user.email}")
         +labelInputPair("Age", "text", "age", "#{user.age}")
        