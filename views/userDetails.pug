include labelInputPair.pug

- var titleText = user.name

doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title= titleText
    body 
        form(action="/updateUser", method="post")
            div 
                +labelInputPair("Name", "text", "name", user.name, user.name, false)
                button(type="button") Delete
            p= "Id: " + user.id
            +labelInputPair("Email", "text", "email", user.email, user.email, false)
            +labelInputPair("Age", "text", "age", user.age, user.age, false)
            // Hidden form id value
            input(type="hidden", name="id", value=user.id)
            button(type="submit") Submit Changes
        